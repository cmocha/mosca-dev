<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>

    <div class="container">
      <header class="header">
        <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }} $ <span class="prompt"></span></a></h1>
        <ul class="nav">
          {%- for nav in collections.nav | reverse -%}
          <li class="nav-item{% if nav.url == page.url %} nav-item-active{% endif %}"><a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
          {%- endfor -%}
        </ul>
      </header>

      <main{% if templateClass %} class="main {{ templateClass }}"{% endif %}>

        {{ content | safe }}
      </main>

      <aside class="sidebar">
        
        <img class="profile" src="/img/profile.jpeg">
        <p class="profile">chris mosca . web dev</p>
        <ul>
          {%- for post in collections.all -%}
            <li><a href="{{ post.url }}">{{ post.url }}</a></li>
          {%- endfor -%}
        </ul>
      
      </aside>

      <footer class="footer">Go ahead copy this. Yep the year is <span id="copyrightYear"></span>
        <script type="text/javascript">
          document.getElementById("copyrightYear").innerHTML = new Date().getFullYear();
        </script>
      </footer>

      <!-- Current page: {{ page.url | url }} -->
    </div>
  </body>
</html>
